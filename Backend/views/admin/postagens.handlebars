<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p><strong>Descrição: </strong>{{descricao}}</p>
            <small><strong>Data: </strong>{{data}}</small><br>
            <small><strong>Categoria: </strong>{{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success float-start mt-3">Editar</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button type="submit" class="btn btn-danger float-end mt-3">Deletar</button></a>

        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}