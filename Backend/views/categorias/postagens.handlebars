<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <hr>
        <small>Data de Publicação: {{data}}</small>
        <a href="/postagem/{{slug}}"><button class="btn btn-success float-end">Leia mais</button></a>
    </div>
</div>
{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}